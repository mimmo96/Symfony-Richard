{# templates/app/home.html.twig #}
{% extends "base.html.twig" %}
{% block head_css %}
    {{  parent()  }}
    <link href="{{ asset('css/home.css') }}" rel="stylesheet"/> 
{% endblock %}
{% block main %}
    <div id="home">
        <div id="title">
            <h1>Richard Benson appreciation page</h1>
            <img style="max-width:100%; height: auto;" src="https://www.lascimmiapensa.com/wp-content/uploads/2020/03/Richard-Benson-1280x720.jpg">
        </div>
        <div id="comments">
        <h3 class="center">Leave your message for Richard:</h3>
        {% for comment in comments %}
            <div class="card mb-3" style="max-width: 800px; margin: 0 auto;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                    <img src="https://ilsalvagente.it/wp-content/uploads/2019/03/pollo_trucco_ucraina.jpg" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ comment["nickname"]}}</h5>
                        <p class="card-text">{{ comment["text"] }}</p>
                        <p class="card-text"><small class="text-muted">User email: {{ comment["email"] }}</small></p>
                    </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
        <div id="form">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}